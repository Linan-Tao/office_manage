<%= simple_form_for(@rule, url: @rule.new_record? ? rules_path : rule_path(@rule)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code, readonly: true %>
    <%= f.input :name %>
    <%= f.association :mould, include_blank: false %>
    <%= f.association :board, include_blank: false %>
    <%= f.association :craft, include_blank: false %>
    <%= f.association :part, include_blank: false %>
    <%= f.input :board_num %>
    <%= f.input :length %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :part_size %>
    <%= f.input :part_num %>
    <%= f.input :note %>
    <%= f.input :creator %>
    <%= f.input :status, as: :radio_buttons, item_wrapper_class: 'radio-inline' %>
   </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
  </div>
<% end %>