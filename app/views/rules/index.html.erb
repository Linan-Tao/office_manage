<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 规则管理 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_rule_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered  text-center">
      <thead>
        <tr class="info">
          <th class="text-center">编码</th>
          <th class="text-center">名称</th>
          <th class="text-center">模块</th>
          <th class="text-center">板件</th>
          <th class="text-center">工艺</th>
          <th class="text-center">配件</th>
          <th class="text-center">状态</th>
          <th class="text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @rules.each do |rule| %>
        <tr>
          <td><%= link_to rule.code, rule, class: 'detail-link' %></td>
          <td><%= rule.name %></td>
          <td><%= rule.mould.name %></td>
          <td><%= rule.board.name %></td>
          <td><%= rule.craft.name %></td>
          <td><%= rule.part.name %></td>
          <td><%= rule.status ? '可用' : '不可用' %></td>
          <td><%= link_to edit_rule_path(rule), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to rule, method: :delete, data: { confirm: '确定删除?' }, class: 'btn btn-xs btn-danger' do %><i class="fa fa-times"></i><% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>