<div class="form-horizontal">
  <%= form_for(@role, url: @role.new_record? ? roles_path : role_path(@role)) do |f| %>
    <% if @role.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

        <ul>
        <% @role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label class="col-md-4 control-label">角色名</label>
      <div class="col-md-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label '英文名称', class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :key, class: "form-control" %>
      </div>
    </div>
    <table class="table">
			<%Role.permissions.each_pair do |k, v| %>
			  <tr>
			    <td><%= v[:name] %></td>
			    <% v[:actions].each_pair do |kk, vv| %>
			      <td><%= kk %><input type="checkbox" value="<%= Array(vv).join(',') %>" <%= 'checked' if Array(vv).find{ |vvv| @role.permission?(k, vvv) } %> name="roles_permissions[<%=k%>][]"></td>
			    <% end %>
			  </tr>
			<% end %>
		</table>
    <div class="form-group">
      <label class="col-md-4 control-label"></label>
      <div class="col-md-4">
        <%= f.submit value: "保存", class: "btn btn-sm btn-success" %>
        <%= link_to '返回', @role.name.present? ? role_path : roles_path, class: 'btn btn-sm btn-default' %>
      </div>
    </div>
  <% end %>
</div>
