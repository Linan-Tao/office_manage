<<div class="page-title">
  <h2><i class="fa fa-desktop color"></i>  固定资产 <small>详细</small>
  <span class="pull-right">
    <%= link_to('返回', :back, class: 'btn btn-lg btn-default') %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered">
      <tbody>
        <tr>
          <th class="col-xs-2 text-center info">名称</th>
          <td class="col-xs-4"><%= @estate.name %></td>
          <th class="col-xs-2 text-center info">金额</th>
          <td class="col-xs-4"><%= @estate.total %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">折旧后</th>
          <td class="col-xs-4"><%= @estate.remain_value %></td>
          <th class="col-xs-2 text-center info">购买日期</th>
          <td class="col-xs-4"><%= @estate.buy_date %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">数量</th>
          <td class="col-xs-4"><%= @estate.number %></td>
          <th class="col-xs-2 text-center info">备注</th>
          <td class="col-xs-4"><%= @estate.note %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>