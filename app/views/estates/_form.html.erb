<%= simple_form_for(@estate, url: @estate.new_record? ? estates_path : estate_path(@estate)) do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :total %>
  <%= f.input :remain_value %>
  <%= f.input :buy_date %>
  <%= f.input :note %>
  <%= f.input :number %>
</div>
<div class="form-actions">
  <%= f.button :submit, value:'提交', class: 'btn btn-lg btn-block btn-primary' %>
</div>
<% end %>
