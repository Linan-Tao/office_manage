<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 固定资产
  <span class="pull-right">
    <%= link_to '添加', new_estate_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered table-condensed text-center">
      <thead>
        <tr class="info">
          <td>名称</td>
          <td>金额</td>
          <td>折旧后</td>
          <td>购买日期</td>
          <td>备注</td>
          <td>数量</td>
          <td>操作</td>
        </tr>
      </thead>
      <tbody>
        <% @estates.each do |estate|%>
        <tr>
          <td><%= estate.name %></td>
          <td><%= estate.total %></td>
          <td><%= estate.remain_value %></td>
          <td><%= estate.buy_date %></td>
          <td><%= estate.note %></td>
          <td><%= estate.number %></td>
          <td>
            <%= link_to  estate,  class: 'btn btn-xs btn-success' do %>
            <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to  edit_estate_path(estate),  class: 'btn btn-xs btn-warning' do %>
            <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to  estate, data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
            <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>