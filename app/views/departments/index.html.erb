<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 部门管理<small>部门</small>
    <span class="pull-right">
      <%= link_to '添加', new_department_path, class: 'btn btn-lg btn-info' %>
    </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
   <div class="awidget-body">
      <table class="table table-hover table-striped table-bordered table-condensed text-center">
       <thead>
         <tr class="info">
           <th class="text-center">部门ID</th>
           <th class="text-center">名称</th>
           <th class="text-center">部门经理</th>
           <th class="text-center">部门人数</th>
           <th class="text-center">部门职能</th>
           <th class="text-center">操作</th>
         </tr>
       </thead>
       <tbody>
         <% @departments.each do |department| %>
           <tr>
             <td><%= department.id %></td>
             <td><%= department.name %></td>
             <td><%= link_to department.manager.try(:name), user_path(department.manager) if department.manager %></td>
             <td><%= department.number %></td>
             <td><%= department.desc.truncate(20)  if department.desc %></td>
             <td>
                <%= link_to  edit_department_path(department),  class: 'btn btn-xs btn-warning' do %>
                    <i class="fa fa-pencil"></i>
                 <% end %>
                <%= link_to  department_path(department), data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
                  <i class="fa fa-times"></i>
                <% end %>
             </td>
           </tr>
         <% end %>

       </tbody>
     </table>
    </div>
</div>