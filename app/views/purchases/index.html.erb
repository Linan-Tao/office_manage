<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 采购管理
    <span class="pull-right">
      <%= link_to '添加采购单', new_purchase_path, class: 'btn btn-lg btn-info' %>
    </span>
  </h2>
  <hr />
</div>
<!-- Page title -->

<div class="awidget full-width">
   <div class="awidget-head">    
        <div class="row">
           <div class="col-md-12 col-sm-12">
              <h3>已下单还未采购的清单表</h3>
           </div>
        </div>
   </div>
   <div class="awidget-body">
      <table class="table table-border">
          <thead>
            <tr>
              <td>生产单号</td>
              <td>项目名称</td>
              <td>项目类别</td>
              <td>项目数量</td>
            </tr>
          </thead>
          <tbody>
            <% @not_purchases_orders.each do |order|%>
              <% order.produce_tasks.each do |pt|%>
              <tr>
                <td><%=pt.id%></td>
                <td><%=pt.item_name %></td>
                <td><%=pt.item_category%></td>
                <td><%=pt.number%></td>
              </tr>
              <%end %>
            <%end%>
          </tbody>
      </table>
   </div>
</div>