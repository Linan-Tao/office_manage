<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 采购管理
    <span class="pull-right">
      <%= link_to '添加', new_purchase_path, class: 'btn btn-lg btn-info' %>
    </span>
  </h2>
  <hr />
</div>
<!-- Page title -->

<div class="awidget full-width">
   <div class="awidget-head">
        <div class="row">
           <div class="col-md-12 col-sm-12">
              <h3>采购清单表</h3>
           </div>
        </div>
   </div>
   <div class="awidget-body">
      <table class="table table-border">
          <thead>
            <tr>
              <td>生产单号</td>
              <td>项目名称</td>
              <td>项目类别</td>
              <td>项目数量</td>
              <td>到货数量</td>
              <td>审核状态</td>
              <td>操作</td>
            </tr>
          </thead>
          <tbody>
            <% @purchases.each do |pur|%>
              <tr>
                <td><%=pur.produce_task_id%></td>
                <td><%=pur.item_name %></td>
                <td><%=pur.item_category%></td>
                <td><%=pur.number%></td>
                <td><%=pur.arrival_number%></td>
                <td><%= pur.check_status_name%></td>
                <td><%= link_to edit_purchase_path(pur), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><% end %></td>
              </tr>
            <%end%>
          </tbody>
      </table>
   </div>
</div>