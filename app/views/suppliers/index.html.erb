<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 供应商管理 <small>管理</small>
  <span class="pull-right">
    <%= link_to '添加', new_supplier_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>

<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h3>供应商列表</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-bordered table-striped">
      <thead>
        <tr class="info">
          <th>名称</th>
          <th>电话</th>
          <th>账户</th>
          <th>地址</th>
          <th>备注</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= supplier.name %></td>
          <td><%= supplier.mobile %></td>
          <td><%= supplier.bank_account %></td>
          <td><%= supplier.address %></td>
          <td><%= supplier.note %></td>
          <td><%= link_to t('suppliers.show.title'), supplier %>&nbsp;
          <%= link_to t('suppliers.edit.title'), edit_supplier_path(supplier) %>&nbsp;
          <%= link_to t('suppliers.destroy.title'), supplier, method: :delete, data: { confirm: '确定删除？' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>