<div class="page-title">
  <h2><i class="fa fa-desktop color"></i>  供应商管理 <small>详细</small>
  <span class="pull-right">
    <%= link_to('返回', :back, class: 'btn btn-lg btn-default') %>
  </span>
  </h2>
  <hr />
</div>

<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h3>供应商详细</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered table-condensed">
      <tbody>
        <tr>
          <th class="col-xs-2 text-center">供应商名称</th>
          <td class="col-xs-4"><%= @supplier.name %></td>
          <th class="col-xs-2 text-center">供应商电话</th>
          <td class="col-xs-4"><%= @supplier.mobile %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center">供应商账号</th>
          <td class="col-xs-4"><%= @supplier.bank_account %></td>
          <th class="col-xs-2 text-center">详细地址</th>
          <td class="col-xs-4"><%= @supplier.address %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center">备注信息</th>
          <td colspan="3"><%= @supplier.note %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>