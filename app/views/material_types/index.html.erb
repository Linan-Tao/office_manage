<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 板料类型 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_material_type_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <h3>板料种类列表</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered  text-center">
      <thead>
        <tr class="info">
          <th class="col-xs-6  text-center">名称</th>
          <th class="col-xs-6  text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @material_types.each do |material_type| %>
        <tr>
          <td><%= material_type.name %></td>
          <td><%= link_to edit_material_type_path(material_type), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to material_type, method: :delete, data: { confirm: '确定删除?' }, class: 'btn btn-xs btn-danger' do %><i class="fa fa-times"></i><% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>