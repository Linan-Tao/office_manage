<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 板料管理 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_material_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-lg-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
          <div class="input-group">
              <%= select_tag :material_category, options_from_collection_for_select(MaterialCategory.all, "id", "name", params[:material_category]), prompt: '所有种类', class: 'form-control' %>
            </div>
            <div class="input-group">
              <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '输入Email/登录名称...' %>
              <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">查询</button>
              </span>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered table-condensed text-center">
      <thead>
        <tr class="info">
          <th class="text-center">编码</th>
          <th class="text-center">厚度</th>
          <th class="text-center">材质</th>
          <th class="text-center">表面</th>
          <th class="text-center">颜色</th>
          <th class="text-center">售价(元/平方)</th>
          <!-- <th class="text-center">单位</th> -->
          <!-- <th class="text-center">库存</th> -->
          <!-- <th class="text-center">供应商</th> -->
          <th class="text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @materials.each do |material| %>
        <tr>
          <td><%= link_to material.code, material, class: 'detail-link' %></td>
          <td><%= MaterialCategory.find(material.ply).name %></td>
          <td><%= MaterialCategory.find(material.texture).name %></td>
          <td><%= MaterialCategory.find(material.face).name %></td>
          <td><%= MaterialCategory.find(material.color).name %></td>
          <td><%= material.sell %></td>
          <!-- <td><%= material.unit %></td> -->
          <!-- <td><%= material.number %></td> -->
          <!-- <td><%= material.supplier.try(:name) %></td> -->
          <td>
            <%= link_to edit_material_path(material), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to material, method: :delete, data: { confirm: '确定删除?' }, class: 'btn btn-xs btn-danger' do %><i class="fa fa-times"></i><% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>