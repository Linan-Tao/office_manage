<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 物料管理 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_material_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>

<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h3>物料列表</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered">
      <thead>
        <tr class="info">
          <th class="col-md-2">大板原料</th>
          <th class="col-md-2">类别型号</th>
          <th class="col-md-2">品牌</th>
          <th class="col-md-2">供应商</th>
          <th class="col-md-1">规格型号</th>
          <th class="col-md-1">规格序号</th>
          <th class="col-md-2 " colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @materials.each do |material| %>
        <tr>
          <td><%= material.origin_material %></td>
          <td><%= material.type_no %></td>
          <td><%= material.brand %></td>
          <td><%= material.supplier.try(:name) %></td>
          <td><%= material.standard_type %></td>
          <td><%= material.standard_no %></td>
          <td><%= link_to '详细' , material %>&nbsp;
          <%= link_to '编辑' , edit_material_path(material) %>&nbsp;
          <%= link_to '删除' , material, method: :delete, data: { confirm: '确定删除?' } %>
          </td>
    <% end %>
  </tbody>
</table>

<br>
