<%= simple_form_for(@material,url: @material.new_record? ? materials_path : material_path(@material)) do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <%= f.association :material_category %>
  <%= f.association :material_type %>
  <%= f.input :number %>
  <%= f.input :price %>
  <%= f.input :code %>
  <%= f.input :unit %>
  <%= f.association :supplier %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
</div>
<% end %>