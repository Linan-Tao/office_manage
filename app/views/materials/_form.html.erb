<%= simple_form_for(@material) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :material_category %>
    <%= f.association :material_type %>
    <%= f.input :number %>
    <%= f.input :price %>
    <%= f.input :code %>
    <%= f.input :unit %>
    <%= f.association :supplier %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
