<%= simple_form_for(@material,url: @material.new_record? ? materials_path : material_path(@material)) do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <%= f.label '板料属性' %>
  <div class="form-group">
  <%= f.select :ply, MaterialCategory.where(oftype: 0).map { |mc| [mc.name, mc.id]} %>
  <%= f.select :texture, MaterialCategory.where(oftype: 1).map { |mc| [mc.name, mc.id]} %>
  <%= f.select :face, MaterialCategory.where(oftype: 2).map { |mc| [mc.name, mc.id]} %>
  <%= f.select :color,MaterialCategory.where(oftype: 3).map { |mc| [mc.name, mc.id]} %>
  </div>
  <% if current_user.name == 'admin'  %>
    <%= f.input :buy, hint: "每平方" %>
  <% end %>
  <%= f.input :number , hint: "张"%>
  <%= f.input :sell, hint: "每平方" %>
  <%= f.association :supplier %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
</div>
<% end %>