<div class="page-title">
  <h2><i class="fa fa-desktop color"></i>  板料管理 <small>详细</small>
  <span class="pull-right">
    <%= link_to('返回',materials_path, class: 'btn btn-lg btn-default') %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h3>板料详细</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered">
      <tbody>
        <tr>
          <th class="col-xs-2 text-center info">板料种类</th>
          <td class="col-xs-10"><%= @material.material_category.name %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">板料类型</th>
          <td class="col-xs-10"><%= @material.material_type.name %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">编码</th>
          <td class="col-xs-10"><%= @material.code %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">价格</th>
          <td class="col-xs-10"><%= @material.price %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">数量</th>
          <td class="col-xs-10"><%= @material.number %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">unit</th>
          <td class="col-xs-10"><%= @material.unit %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">供应商</th>
          <td class="col-xs-10"><%= @material.supplier.try(:name) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>