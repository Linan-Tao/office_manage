<div class="page-title">
  <h2><i class="fa fa-desktop color"></i>  板料管理 <small>详细</small>
  <span class="pull-right">
    <%= link_to('返回', :back, class: 'btn btn-lg btn-default') %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h3>板料详细</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered table-condensed">
      <tbody>
        <tr>
          <th class="col-xs-2 text-center info">编码</th>
          <td class="col-xs-10"><%= @material.code %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">厚度</th>
          <td class="col-xs-10"><%= MaterialCategory.find(@material.ply).name %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">材质</th>
          <td class="col-xs-10"><%= MaterialCategory.find(@material.texture).name %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">表面</th>
          <td class="col-xs-10"><%= MaterialCategory.find(@material.face).name %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">颜色</th>
          <td class="col-xs-10"><%= MaterialCategory.find(@material.color).name %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">售价</th>
          <td class="col-xs-10"><%= @material.sell %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">单位</th>
          <td class="col-xs-10"><%= @material.unit %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">库存</th>
          <td class="col-xs-10"><%= @material.number %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">供应商</th>
          <td class="col-xs-10"><%= @material.supplier.try(:name) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>