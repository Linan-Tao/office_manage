<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 生产管理 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_produce_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <h3>生产管理列表</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered text-center">
      <thead>
        <tr class="info">
          <th class="col-xs-2 text-center">生产任务</th>
          <th class="col-xs-3 text-center">开始时间</th>
          <th class="col-xs-3 text-center">完成时间</th>
          <th class="col-xs-2 text-center">工序名称</th>
          <th class="col-xs-2 text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @produces.each do |produce| %>
        <tr>
          <td><%= produce.produce_task.order_id %></td>
        <td><%= produce.start_time %></td>
        <td><%= produce.end_time %></td>
        <td><%= produce.work %></td>
          <td><%= link_to produce, class: 'btn btn-xs btn-success' do %><i class="fa fa-eye"></i><% end %>
            <%= link_to edit_produce_path(produce), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to produce, method: :delete, data: { confirm: '确定删除?' }, class: 'btn btn-xs btn-danger' do %><i class="fa fa-times"></i><% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>