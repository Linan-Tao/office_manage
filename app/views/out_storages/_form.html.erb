<%= simple_form_for(@out_storage, url: @out_storage.new_record? ? out_storages_path : out_storage_path(@out_storage)) do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <%= f.input :out_date %>
  <%= f.association :department %>
  <%= f.input :out_user %>
  <div class="form-group">
    <%= label_tag '订单号' %>
    <%= select_tag :produce_task,options_from_collection_for_select(Order.all, 'id', 'order_code', :produce_task), class: 'form-control' %>
  </div>
  <%= f.input :item_id %>
  <%= f.input :item_type %>
  <%= f.input :number %>
  <%= f.association :user %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
</div>
<% end %>