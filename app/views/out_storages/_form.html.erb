<%= simple_form_for(@out_storage, url: @out_storage.new_record? ? out_storages_path : out_storage_path(@out_storage)) do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <%= f.input :out_date %>
  <%= f.association :department %>
  <div class="form-group string optional">
      <label class="string optional control-label" for="user_id">领料人</label><br/>
      <input type="hidden" id="remoteOutUser" name='out_storage[:out_user]' data-id="<%=@out_storage.out_user %>" data-name="<%=@out_storage.out_user if @out_storage.out_user.present? %>"/>
    </div>
  <%= f.input :produce_task_id, readonly: true %>
  <%= f.input :item_name, readonly: true %>
  <%= f.input :item_category, readonly: true %>
  <%= f.input :number, readonly: true %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
</div>
<% end %>