<%= simple_form_for(@mix_task,url: @mix_task.new_record? ? mix_tasks_path : mix_task_path(@mix_task)) do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <%= f.input :number %>
  <%= f.input :availability %>
  <%= f.input :file_path %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
</div>
<% end %>