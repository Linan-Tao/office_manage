<div class="page-title">
  <h2><i class="fa fa-desktop color"></i>  工艺管理 <small>详细</small>
  <span class="pull-right">
    <%= link_to('返回', crafts_path, class: 'btn btn-lg btn-default') %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered table-condensed">
      <tbody>
        <tr>
          <th class="col-xs-2 text-center info">编码</th>
          <td class="col-xs-4"><%= @craft.code %></td>
          <th class="col-xs-2 text-center info">名称</th>
          <td class="col-xs-4"><%= @craft.name %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">创建者</th>
          <td class="col-xs-4"><%= @craft.creator %></td>
          <th class="col-xs-2 text-center info">状态</th>
          <td class="col-xs-4"><%= @craft.status ? '可用' : '不可用' %></td>
        </tr>
        <tr>
          <th class="col-xs-2 text-center info">备注</th>
          <td colspan="3" class="col-xs-10"><%= @craft.note %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>