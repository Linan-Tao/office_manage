<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 工艺管理 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_craft_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered  text-center">
      <thead>
        <tr class="info">
          <th class="text-center">编码</th>
          <th class="text-center">名称</th>
          <th class="text-center">状态</th>
          <th class="text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @crafts.each do |craft| %>
        <tr>
          <td><%= link_to craft.code, craft, class: 'detail-link' %></td>
          <td><%= craft.name %></td>
          <td><%= craft.status ? '可用' : '不可用' %></td>
          <td><%= link_to edit_craft_path(craft), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to craft, method: :delete, data: { confirm: '确定删除?' }, class: 'btn btn-xs btn-danger' do %><i class="fa fa-times"></i><% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>