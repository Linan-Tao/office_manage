<%= simple_form_for(@board, url: @board.new_record? ? boards_path : board_path(@board)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code, readonly: true %>
    <%= f.input :name %>
    <%= f.input :note %>
    <%= f.input :creator %>
    <%= f.input :status, as: :radio_buttons, item_wrapper_class: 'radio-inline' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交'  %>
  </div>
<% end %>
