<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 工资管理
  <span class="pull-right">
    <%= link_to '添加', new_month_salary_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-lg-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
            <div class="input-group">
              <%= select_tag :work_id, options_from_collection_for_select(Work.all, "id", "name", params[:work_id]), prompt: '所有', class: 'form-control' %>
            </div>
            <div class="input-group">
              <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '输入员工号...' %>
              <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">查询</button>
              </span>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered table-condensed text-center">
      <thead>
        <tr class="info">
          <td>编号</td>
          <td>姓名</td>
          <td>应发</td>
          <td>补贴</td>
          <td>加班</td>
          <td>扣款</td>
          <td>奖金</td>
          <td>养老金</td>
          <td>医疗险</td>
          <td>失业险</td>
          <td>公积金</td>
          <td>税前</td>
          <td>所得税</td>
          <td>实得</td>
          <td>操作</td>
        </tr>
      </thead>
      <tbody>
        <% @month_salaries.each do |month_salary|%>
        <tr>
          <td><%= month_salary.user.id %></td>
          <td><%= month_salary.name %></td>
          <td><%= month_salary.total %></td>
          <td><%= month_salary.extra %></td>
          <td><%= month_salary.add %></td>
          <td><%= month_salary.cut %></td>
          <td><%= month_salary.bonus %></td>
          <td><%= month_salary.old_age_insurance %></td>
          <td><%= month_salary.medicare_insurance %></td>
          <td><%= month_salary.unemployed_insurance %></td>
          <td><%= month_salary.house_fund %></td>
          <td><%= month_salary.pre_tax %></td>
          <td><%= month_salary.income_tax %></td>
          <td><%= month_salary.actual %></td>
          <td>
            <%= link_to  month_salary,  class: 'btn btn-xs btn-success' do %>
            <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to  edit_month_salary_path(month_salary),  class: 'btn btn-xs btn-warning' do %>
            <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to  month_salary, data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
            <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>