<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 订单管理
    <span class="pull-right">
      <%= link_to '添加订单', new_order_path, class: 'btn btn-lg btn-info' %>
    </span>
  </h2>
  <hr />
</div>
<!-- Page title -->

<div class="awidget full-width">
   <div class="awidget-head">
        <div class="row">
      <div class="col-lg-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
            <div class="input-group">
              <%= select_tag :work_id, options_from_collection_for_select(Work.all, "id", "name", params[:work_id]), prompt: '所有', class: 'form-control' %>
            </div>
            <div class="input-group">
              <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '输入订单号...' %>
              <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">查询</button>
              </span>
            </div>
          </form>
        </span>
      </div>
    </div>
   </div>
   <div class="awidget-body">
      <table class="table table-hover table-striped table-bordered text-center">
          <thead>
            <tr class="info">
              <td>订单号</td>
              <td>订单状态</td>
              <td>操作</td>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order|%>
              <tr>
                <td><%= link_to order.order_code, order_path(order), class: 'detail-link' %></td>
                <td><% if order.work.name == '已报价' %>
                <%= link_to '报价信息', '#', class:'detail-link'  %>
                <% else %>
                <%= order.work.name %>
                <% end %></td>
               <td>
                  <% if order.checked? %>
                  <%= link_to '创建生产任务单',new_produce_task_path(order_id: order.id), class: 'btn btn-xs btn-info'%>
                  <% end %>
                  <%= link_to  edit_order_path(order),  class: 'btn btn-xs btn-warning' do %>
                      <i class="fa fa-pencil"></i>
                   <% end %>
                  <%= link_to  order_path(order), data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
                    <i class="fa fa-times"></i>
                  <% end %>
               </td>
              </tr>
            <% end %>
          </tbody>
      </table>
   </div>
</div>