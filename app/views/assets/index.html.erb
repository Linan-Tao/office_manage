<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 固定资产
  <span class="pull-right">
    <%= link_to '添加', new_asset_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-lg-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
            <div class="input-group">
              <%= select_tag :work_id, options_from_collection_for_select(Work.all, "id", "name", params[:work_id]), prompt: '所有', class: 'form-control' %>
            </div>
            <div class="input-group">
              <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '输入员工号...' %>
              <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">查询</button>
              </span>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered text-center">
      <thead>
        <tr class="info">
          <td>名称</td>
          <td>金额</td>
          <td>折旧后</td>
          <td>购买日期</td>
          <td>备注</td>
          <td>数量</td>
          <td>操作</td>
        </tr>
      </thead>
      <tbody>
        <% @assets.each do |asset|%>
        <tr>
          <td><%= asset.name %></td>
          <td><%= asset.total %></td>
          <td><%= asset.remain_value %></td>
          <td><%= asset.buy_date %></td>
          <td><%= asset.note %></td>
          <td><%= asset.number %></td>
          <td>
            <%= link_to  asset,  class: 'btn btn-xs btn-success' do %>
            <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to  edit_asset_path(asset),  class: 'btn btn-xs btn-warning' do %>
            <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to  asset, data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
            <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>