<p id="notice"><%= notice %></p>

<h1>Listing Assets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total</th>
      <th>Remain value</th>
      <th>Buy date</th>
      <th>Note</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.name %></td>
        <td><%= asset.total %></td>
        <td><%= asset.remain_value %></td>
        <td><%= asset.buy_date %></td>
        <td><%= asset.note %></td>
        <td><%= asset.number %></td>
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

