<%=simple_form_for(@driver,url: @driver.new_record? ? drivers_path : driver_path(@driver)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :car_type %>
    <%= f.input :car_code %>
    <%= f.input :phone %>
    <%= f.input :serve_rank %>
    <%= f.input :price_rank %>
    <%= f.input :secure_rank %>
    <%= f.input :credit_rank %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
  </div>
<% end %>
