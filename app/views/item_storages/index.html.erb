<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 入库记录 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_item_storage_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-lg-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
            <div class="input-group">
              <%= select_tag :work_id, options_from_collection_for_select(Work.all, "id", "name", params[:work_id]), prompt: '所有', class: 'form-control' %>
            </div>
            <div class="input-group">
              <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '输入员工号...' %>
              <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">查询</button>
              </span>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered text-center">
      <thead>
        <tr class="info">
          <td>入库日期</td>
          <td>收货人</td>
          <td>采购单号</td>
          <td>编号</td>
          <td>类型</td>
          <td>品牌</td>
          <td>数量</td>
          <td>供应商</td>
          <td>操作</td>
        </tr>
      </thead>
      <tbody>
        <% @item_storages.each do |item_storage|%>
        <tr>
          <td><%= item_storage.storage_date %></td>
        <td><%= item_storage.receiver %></td>
        <td><%= item_storage.purchase %></td>
        <td><%= item_storage.item_id %></td>
        <td><%= item_storage.item_type %></td>
        <td><%= item_storage.brand %></td>
        <td><%= item_storage.number %></td>
        <td><%= item_storage.supplier.name %></td>
          <td>
            <%= link_to  item_storage,  class: 'btn btn-xs btn-success' do %>
            <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to  edit_item_storage_path(item_storage),  class: 'btn btn-xs btn-warning' do %>
            <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to  item_storage, data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
            <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>