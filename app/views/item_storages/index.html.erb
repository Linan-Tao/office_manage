<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 入库记录 <small>列表</small>
  </h2>
  <hr />
</div>


<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-lg-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
            <div class="input-group">
              <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '采购单号...' %>
              <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">查询</button>
              </span>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-border">
          <thead>
            <tr>
              <td>采购单号</td>
              <td>生产单号</td>
              <td>项目名称</td>
              <td>项目类别</td>
              <td>数量</td>
              <td>到货数量</td>
              <td>审核状态</td>
              <td>添加到货</td>
            </tr>
          </thead>
          <tbody>
            <% @purchases.each do |pur|%>
              <tr>
                <td><%= pur.id %></td>
                <td><%=pur.produce_task_id %></td>
                <td><%=pur.item_name %></td>
                <td><%=pur.item_category%></td>
                <td><%=pur.number%></td>
                <td><%=pur.arrival_number%></td>
                <td><%= pur.check_status_name%></td>
                <td>
                  <%=link_to '添加到货',new_item_storage_path(purchase_id: pur.id), class: 'btn btn-xs btn-success' %>
                </td>
              </tr>
            <%end%>
          </tbody>
      </table>
  </div>
</div>

<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-lg-12">
        <h3>
          入库纪录表
        </h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
 <table class="table table-hover table-striped table-bordered text-center">
      <thead>
        <tr class="info">
          <td>入库日期</td>
          <td>收货人</td>
          <td>采购单号</td>
          <td>类型</td>
          <td>名称</td>
          <td>品牌</td>
          <td>数量</td>
          <td>供应商</td>
        </tr>
      </thead>
      <tbody>
        <% @item_storages.each do |item_storage|%>
        <tr>
          <td><%= item_storage.storage_date.localtime.strftime("%Y-%m-%d") %></td>
        <td><%= item_storage.receiver %></td>
        <td><%= item_storage.purchase.try(:id) %></td>
        <td><%= item_storage.item_category %></td>
        <td><%= item_storage.item_name %></td>
        <td><%= item_storage.brand %></td>
        <td><%= item_storage.number %></td>
        <td><%= item_storage.supplier.try(:name) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

