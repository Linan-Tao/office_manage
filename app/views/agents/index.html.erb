<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 代理商管理 <small>管理</small>
  <span class="pull-right">
    <%= link_to '添加', new_agent_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>

<div class="awidget full-width">
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered text-center">
      <thead>
        <tr class="info">
          <th class=" text-center">编号</th>
          <th class=" text-center">名称</th>
          <th class=" text-center">联系方式</th>
          <th class=" text-center">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @agents.each do |agent| %>
        <tr>
          <td><%= link_to agent.code, agent, class: 'detail-link' %></td>
          <td><%= agent.name %></td>
          <td><%= agent.mobile %></td>
          <td>
          <%= link_to  edit_agent_path(agent), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><%end%>
          <%= link_to agent, method: :delete, data: { confirm: '确定删除?' }, class: 'btn btn-xs btn-danger' do %><i class="fa fa-times"></i><%end%>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>