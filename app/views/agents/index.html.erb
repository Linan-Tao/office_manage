<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 代理商管理 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_agent_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>

<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h3>代理商列表</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered">
      <thead>
        <tr class="info">
          <th class="col-md-2">编号</th>
          <th class="col-md-2">名称</th>
          <th class="col-md-2">联系方式</th>
          <th class="col-md-2">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @agents.each do |agent| %>
        <tr>
          <td><%= agent.code %></td>
          <td><%= agent.name %></td>
          <td><%= agent.mobile %></td>
          <td><%= link_to '详细', agent %>&nbsp;
          <%= link_to '编辑' , edit_agent_path(agent) %>&nbsp;
          <%= link_to '删除', agent, method: :delete, data: { confirm: '确定删除?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>