<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 订单管理
    <span class="pull-right">
      <%= link_to '添加', new_order_union_path, class: 'btn btn-lg btn-info' %>
    </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<% @order_unions.each do |order_union|%>
  <div class="awidget full-width">
     <div class="awidget-head">
        <div class="row">
          <div class="col-lg-3">
            订单号
          </div>
          <div class="col-lg-3">
            <%= order_union.code%>
          </div>
          <div class="col-lg-3">
            客户
          </div>
          <div class="col-lg-3">
            <%= order_union.agent.name%>
          </div>
        </div>
      </div>
     <div class="awidget-body">
        <table class="table table-hover table-striped table-bordered text-center">
            <thead>
              <tr class="info">
                <td>子订单号</td>
                <td>子订单状态</td>
                <td>操作</td>
              </tr>
            </thead>
            <tbody>
              <% order_union.orders.each do |order|%>
                <tr>
                  <td><%= link_to order.order_code, order_path(order), class: 'detail-link' %></td>
                  <td><% if order.work.try(:sequence).to_i > 2 %><!-- 工序值 -->
                  <%= link_to order.work.name, order_offers_path(order), class:'detail-link'  %>
                  <% else %>
                  <%= order.work.try(:name) %>
                  <% end %></td>
                 <td>
                    <% if order.checked? %>
                    <%= link_to '创建生产任务单',new_produce_task_path(order_id: order.id), class: 'btn btn-xs btn-info'%>
                    <% end %>
                    <%= link_to  edit_order_path(order),  class: 'btn btn-xs btn-warning' do %>
                        <i class="fa fa-pencil"></i>
                     <% end %>
                    <%= link_to  order_path(order), data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
                      <i class="fa fa-times"></i>
                    <% end %>
                 </td>
                </tr>
              <% end %>
            </tbody>
        </table>
     </div>
  </div>
<% end%>