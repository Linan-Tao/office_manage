<%= simple_form_for(@order_bill, url: @order_bill.new_record? ? order_order_bills_path(@order) : order_order_bill_path(@order,@order_bill)) do |f| %>
<%= f.error_notification %>
  <%= f.input :total, disabled: true%>
  <%= f.input :paid, required: true %>
  <%= f.input :pay_date %>
  <%= f.input :pay_account, required: true %>
  <%= f.association :user %>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
</div>
<% end %>