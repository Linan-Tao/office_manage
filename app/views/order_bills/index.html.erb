<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 订单到款<small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_order_bill_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
            <div class="text-left">
              <div class="input-group">
                <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '输入订单编号...' %>
                <span class="input-group-btn">
                  <button type="submit" class="btn btn-default">查询</button>
                </span>
              </div>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-striped table-hover table-bordered text-center">
      <thead>
        <tr class="info">
          <th class="text-center">订单号</th>
          <th class="text-center">应收款</th>
          <th class="text-center">实收款</th>
          <th class="text-center">未收款</th>
          <th class="text-center">结付日</th>
          <th class="text-center">付款账户</th>
          <th class="text-center">指令</th>
          <th class="text-center">催款人</th>
          <th class="text-center">发货日期</th>
          <th class="text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @order_bills.each do |order_bill| %>
        <tr>
          <td><%= order_bill.order.order_code %></td>
          <td><%= order_bill.total %></td>
          <td><%= order_bill.paid %></td>
          <td><%= order_bill.left %></td>
          <td><%= order_bill.pay_date %></td>
          <td><%= order_bill.pay_account %></td>
          <td><%= order_bill.directive %></td>
          <td><%= order_bill.user.name %></td>
          <td><%= order_bill.delivery_date %></td>
          <td>
            <%= link_to order_bill, class: 'btn btn-xs btn-success' do %><i class="fa fa-eye"></i><% end %>
            <%= link_to  edit_order_bill_path(order_bill),  class: 'btn btn-xs btn-warning' do %>
            <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to order_bill, data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
            <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>