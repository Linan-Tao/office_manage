<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 物流商 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_logistic_provider_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered table-condensed text-center">
      <thead>
        <tr class="info">
          <th class="text-center">物流商</th>
          <th class="text-center">电话</th>
          <th class="text-center">地址</th>
          <th class="text-center">QQ</th>
          <th class="text-center">负责人</th>
          <th class="text-center">负责人电话</th>
          <th class="text-center">发货方式</th>
          <th class="text-center">到货周期</th>
          <th class="text-center">服务级别</th>
          <th class="text-center">价格级别</th>
          <th class="text-center">安全级别</th>
          <th class="text-center">信用级别</th>
          <th class="text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @logistic_providers.each do |logistic_provider| %>
        <tr>
          <td><%= logistic_provider.name %></td>
          <td><%= logistic_provider.phone %></td>
          <td><%= logistic_provider.address %></td>
          <td><%= logistic_provider.qq %></td>
          <td><%= logistic_provider.director %></td>
          <td><%= logistic_provider.director_phone %></td>
          <td><%= logistic_provider.delivery_way %></td>
          <td><%= logistic_provider.arrival_cycle %></td>
          <td><%= logistic_provider.serve_rank %></td>
          <td><%= logistic_provider.price_rank %></td>
          <td><%= logistic_provider.secure_rank %></td>
          <td><%= logistic_provider.credit_rank %></td>
          <td><%= link_to logistic_provider, class: 'btn btn-xs btn-success' do %><i class="fa fa-eye"></i><% end %>
            <%= link_to edit_logistic_provider_path(logistic_provider), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to logistic_provider, method: :delete, data: { confirm: '确定删除?' }, class: 'btn btn-xs btn-danger' do %><i class="fa fa-times"></i><% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>