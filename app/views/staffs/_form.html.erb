<%= simple_form_for(@staff, url: @staff.new_record? ? staffs_path : staff_path(@staff)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :name %>
    <%= f.association :department %>
    <%= f.input :id_card %>
    <%= f.input :base_salary %>
    <%= f.input :old_age_insurance %>
    <%= f.input :medicare_insurance %>
    <%= f.input :unemployed_insurance %>
    <%= f.input :house_fund %>
    <%= f.input :status, collection: Staff.status, as: :radio_buttons, item_wrapper_class: 'radio-inline' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
  </div>
<% end %>
