<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 员工管理 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_staff_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered table-condensed text-center">
      <thead>
        <tr class="info">
          <th class="text-center">账号</th>
          <th class="text-center">姓名</th>
          <th class="text-center">部门</th>
          <th class="text-center">身份证号</th>
          <th class="text-center">基本工资</th>
          <th class="text-center">养老保险</th>
          <th class="text-center">医疗保险</th>
          <th class="text-center">失业保险</th>
          <th class="text-center">公积金</th>
          <th class="text-center">状态</th>
          <th  class="text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @staffs.each do |staff|%>
        <tr>
          <td><%= staff.user.name %></td>
          <td><%= staff.name %></td>
          <td><%= staff.department.name %></td>
          <td><%= staff.id_card %></td>
          <td><%= staff.base_salary %></td>
          <td><%= staff.old_age_insurance %></td>
          <td><%= staff.medicare_insurance %></td>
          <td><%= staff.unemployed_insurance %></td>
          <td><%= staff.house_fund %></td>
          <td><%= staff.status_name %></td>
          <td>
            <%= link_to  staff,  class: 'btn btn-xs btn-success' do %>
            <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to  edit_staff_path(staff),  class: 'btn btn-xs btn-warning' do %>
            <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to  staff, data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
            <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>