<p id="notice"><%= notice %></p>

<h1>Listing Staffs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Department</th>
      <th>Id card</th>
      <th>Base salary</th>
      <th>Old age insurance</th>
      <th>Medicare insurance</th>
      <th>Unemployed insurance</th>
      <th>House fund</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.user %></td>
        <td><%= staff.name %></td>
        <td><%= staff.department %></td>
        <td><%= staff.id_card %></td>
        <td><%= staff.base_salary %></td>
        <td><%= staff.old_age_insurance %></td>
        <td><%= staff.medicare_insurance %></td>
        <td><%= staff.unemployed_insurance %></td>
        <td><%= staff.house_fund %></td>
        <td><%= staff.status %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

