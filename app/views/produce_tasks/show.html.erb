<!-- Page title -->
<div class="page-title">
  <h3><i class="fa fa-desktop color"></i> 生产任务单管理<small>生产任务详细</small>
    <span class="pull-right">
    </span>
  </h3>
  <hr />
</div>
<div class="awidget full-width">
   <div class="awidget-head">    
        <div class="row">
           <div class="col-md-12 col-sm-12">
              <h3>生产原料
              </h3>
           </div>
        </div>
   </div>
   <div class="awidget-body">
      <div class="row">
         <div class="col-md-3 col-sm-3">
            原料名称:<%=@produce_task.item_name %>
         </div>
         <div class="col-md-3 col-sm-3"> 
            型号类别:<%=@produce_task.item_category %>
         </div>
         <div class="col-md-3 col-sm-3">
            板料面积:<%=@produce_task.area %>
         </div>
         <div class="col-md-3 col-sm-3">
            数量:<%=@produce_task.number %>
         </div>
      </div>
   </div>
</div>
<% if @produce_task.item_type =="Material" %>
  <div class="awidget full-width">
     <div class="awidget-head">    
          <div class="row">
             <div class="col-md-12 col-sm-12">
                <h3>订单部件列表</h3>
             </div>
          </div>
     </div>
     <div class="awidget-body">
      <div class="table-responsive" style="height: 400px;">
         <table class="table table-border">
          <thead>
            <tr>
              <td>订单号</td>
              <td>部件名称</td>
              <td>板料</td>
              <td>长</td>
              <td>宽</td>
              <td>厚</td>
              <td>数量</td>
              <td>剪裁尺寸</td>
              <td>颜色</td>
              <td>封边</td>
              <td>纹理</td>
              <td>备注</td>
            </tr>
          </thead>
          <tbody>
            <% @produce_task.order_units.each do |unit|%>
              <tr>
                <td><%= unit.order.order_code%></td>
                <td><%= unit.unit_name%></td>
                <td><%= unit.name%></td>
                <td><%= unit.lenght%></td>
                <td><%= unit.width%></td>
                <td><%= unit.thick%></td>
                <td><%= unit.number%></td>
                <td><%= unit.size%></td>
                <td><%= unit.color%></td>
                <td><%= unit.edge%></td>
                <td><%= unit.texture%></td>
                <td><%= unit.note%></td>
              </tr>
            <% end %>
          </tbody>
         </table>
        </div>
     </div>
  </div>
<%end%>