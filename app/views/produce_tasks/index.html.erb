<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 生产任务管理 <small>列表</small>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-lg-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
            <div class="input-group">
              <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '输入订单号...' %>
              <span class="input-group-btn">
                <button type="submit" class="btn btn-primary">查询</button>
              </span>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered text-center">
      <thead>
        <tr class="info">
          <th class="col-xs-2 text-center">订单编号</th>
          <th class="col-xs-2 text-center">名称</th>
          <th class="col-xs-1 text-center">型号</th>
          <th class="text-center">工序</th>
          <th class="text-center">面积</th>
          <th class="text-center">混单号</th>
          <th class="text-center">混单状态</th>
          <th class="text-center">利用率</th>
          <th class="text-center">工序进度</th>
          <th colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @produce_tasks.each do |produce_task| %>
        <tr>
          <td><%= produce_task.order.order_code %></td>
          <td><%= produce_task.item_name %></td>
          <td><%= produce_task.item_category%></td>
          <td><%= produce_task.sequence %></td>
          <td><%= produce_task.area %></td>
          <td><%= produce_task.mix_task.try(:id) %></td>
          <td><%= produce_task.mix_status_name %></td>
          <td><%= produce_task.availability %></td>
          <td><%= produce_task.work.try(:name) %></td>
          <td><%= link_to produce_task, class: 'btn btn-xs btn-success' do %><i class="fa fa-eye"></i><% end %>
            <%= link_to edit_produce_task_path(produce_task), class: 'btn btn-xs btn-warning' do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to  produce_task, method: :delete, data: { confirm: '确定删除?' }, class: 'btn btn-xs btn-danger' do %><i class="fa fa-times"></i><% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>