<!-- Page title -->
<div class="page-title">
  <h3><i class="fa fa-desktop color"></i> 生产任务单管理<small>创建生产任务</small>
  <span class="pull-right">

  </span>
  </h3>
  <hr />
</div>
<%=form_tag produce_tasks_path(@produce_task), class: 'form-inline' do%>
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
      <div class="row">
          <div class="col-xs-6 col-sm-6">
            <%=label_tag 'material_category_id','原料名称'%>
            <%= select_tag(:material_category_id, options_for_select(MaterialCategory.all.map {|mc| [mc.name,mc.id]}),{ :class => 'form-control'}) %>
          </div>
          <div class="col-xs-4 col-sm-4 ">
            <%=label_tag 'area','面积' %>
            <%= number_field_tag :area, nil,:step => 'any', class: 'form-control', :required => true, style: "width: 20%"%>
            <%=label_tag 'number','数量' %>
            <%= number_field_tag :number, nil, :class => 'form-control', :required => true, style: "width: 20%"%>
          </div>
          <div class="col-xs-2 col-sm-2">
            <%= submit_tag "创建任务单", class: 'btn btn-info'%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <div class="table-responsive" style="height: 500px;">
      <table class="table table-border">
        <thead>
          <tr>
            <td>勾选</td>
            <th>订单号</th>
            <td>部件名称</td>
            <td>板料</td>
            <td>长</td>
            <td>宽</td>
            <td>厚</td>
            <td>数量</td>
            <td>剪裁尺寸</td>
            <td>颜色</td>
            <td>封边</td>
            <td>纹理</td>
            <td>备注</td>
          </tr>
        </thead>
        <tbody>
          <% @order_units.each do |unit|%>
          <tr>
            <td><%=check_box_tag 'units[id][]', unit.id%></td>
            <td><%= unit.order.order_code %></td>
            <td><%= unit.unit_name%></td>
            <td><%= unit.name%></td>
            <td><%= unit.lenght%></td>
            <td><%= unit.width%></td>
            <td><%= unit.thick%></td>
            <td><%= unit.number%></td>
            <td><%= unit.size%></td>
            <td><%= unit.color%></td>
            <td><%= unit.edge%></td>
            <td><%= unit.texture%></td>
            <td><%= unit.note%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%end%>