<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i>未下单订单<small>列表</small>
  <span class="pull-right">
    <%= link_to '创建生产任务', new_produce_task_path, class: 'btn btn-info'%>
  </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-striped table-hover table-bordered table-condensed text-center">
      <thead>
        <tr class="info">
          <th class="text-center">订单号</th>
          <th class="text-center">报价时间</th>
          <th class="text-center">客户单号</th>
          <th class="text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.order_code, order_path(order) %></td>
          <td><%= order.try(:offer_time).localtime.to_date %></td>
          <td><%= order.order_union.code %></td>
          <td>
            <%= link_to '查看', order_path(order), class: 'btn btn-xs btn-success'%>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>