<!-- Page title -->
<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 流水账单<small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_flow_bill_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<!-- Page title -->
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <span class="pull-right">
          <form class="form-inline" role="search">
            <div class="text-left">
              <div class="input-group">
                <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: '输入订单编号...' %>
                <span class="input-group-btn">
                  <button type="submit" class="btn btn-default">查询</button>
                </span>
              </div>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-striped table-hover table-bordered table-condensed text-center">
      <thead>
        <tr class="info">
          <th class="text-center">填单日期</th>
          <th class="text-center">收支类型</th>
          <th class="text-center">收支客户</th>
          <th class="text-center">收支金额</th>
          <th class="text-center">订单号</th>
          <th class="text-center">审核状态</th>
          <th class="text-center">采购单号</th>
          <th class="text-center" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @flow_bills.each do |flow_bill| %>
        <tr>
          <td><%= flow_bill.bill_date %></td>
          <td><%= flow_bill.bill_type %></td>
          <td><%= flow_bill.customer %></td>
          <td><%= flow_bill.total %></td>
          <td><%= flow_bill.order_code %></td>
          <td><%= flow_bill.check_status %></td>
          <td><%= flow_bill.purchase_code %></td>
          <td>
            <%= link_to flow_bill, class: 'btn btn-xs btn-success' do %><i class="fa fa-eye"></i><% end %>
            <%= link_to  edit_flow_bill_path(flow_bill),  class: 'btn btn-xs btn-warning' do %>
            <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to flow_bill, data: {:confirm => '确定要删除吗?'}, :method => :delete, class: 'btn btn-xs btn-danger' do %>
            <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>