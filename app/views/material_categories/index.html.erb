<div class="page-title">
  <h2><i class="fa fa-desktop color"></i> 板料种类 <small>列表</small>
  <span class="pull-right">
    <%= link_to '添加', new_material_category_path, class: 'btn btn-lg btn-info' %>
  </span>
  </h2>
  <hr />
</div>
<div class="awidget full-width">
  <div class="awidget-head">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h3>板料种类列表</h3>
      </div>
    </div>
  </div>
  <div class="awidget-body">
    <table class="table table-hover table-striped table-bordered">
      <thead>
        <tr class="info">
          <th class="col-md-6">名称</th>
          <th class="col-md-6" colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @material_categories.each do |material_category| %>
        <tr>
          <td><%= material_category.name %></td>
          <td><%= link_to '详细', material_category %>&nbsp;
            <%= link_to '编辑' , edit_material_category_path(material_category) %>&nbsp;
            <%= link_to '删除', material_category, method: :delete, data: { confirm: '确定删除?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>