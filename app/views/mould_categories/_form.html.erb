<%= simple_form_for(@mould_category, url: @mould_category.new_record? ? mould_categories_path : mould_category_path(@mould_category)) do |f| %>
  <%= f.error_notification %>
  <%= f.input :code, readonly: true %>
  <%= f.input :name %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary', value: '提交' %>
  </div>
<% end %>
